{
    "manifest_version": 2,
    "name": "Screenshot Extension",
    "version": "1.0",
    "description": "Capture screenshots on click and drag",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "main.js"
            ],
            "all_frames": true
        }
    ],
    "browser_action": {
        "default_title": "Screenshot Extension",
        "default_popup": "index.html"
    },
    "action": {}
}